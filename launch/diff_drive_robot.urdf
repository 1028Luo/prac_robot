<!-- differential drive robot URDF model used for my personal project -->
<!-- Written by Jiexing Luo -->


<robot name="diff_drive_robot">

  <!-- Base Link -->
  <link name="base_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <box size="1 0.6 0.4"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0.5 1 1"/>
      </material>
    </visual>
    <!-- Base collision, mass and inertia -->
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <box size="1 0.6 0.4"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="5"/>
      <inertia ixx="0.13" ixy="0.0" ixz="0.0" iyy="0.21" iyz="0.0" izz="0.13"/>
    </inertial>

  </link>
  

  <!-- Right Wheel -->
  <link name="right_wheel">
    <visual>
      <origin xyz="0 0 0"  rpy="1.570795 0 0" />
      <geometry>
        <cylinder radius="0.15" length="0.05"/>
      </geometry>
      <material name="darkgray">
        <color rgba=".2 .2 .2 1"/>
      </material>
    </visual>
    <!-- Right Wheel collision, mass and inertia -->
    <collision>
      <origin xyz="0 0 0"  rpy="1.570795 0 0" />
      <geometry>
        <cylinder radius="0.15" length="0.04318"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.005" iyz="0.0" izz="0.005"/>
    </inertial>

  </link>


  <!-- Right Wheel joint -->
  <!-- describes the relative position of two links -->
  
  <joint name="joint_right_wheel" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin xyz="0 0.325 -0.2"  rpy="0 0 0" /> 
    <axis xyz="0 1 0" />
  </joint>


  <!-- left Wheel -->
  <link name="left_wheel">
    <visual>
      <origin xyz="0 0 0"  rpy="1.570795 0 0" />
      <geometry>
        <cylinder radius="0.15" length="0.05"/>
      </geometry>
      <material name="darkgray">
        <color rgba=".2 .2 .2 1"/>
      </material>
    </visual>
    <!-- left Wheel collision, mass and inertia -->
    <collision>
      <origin xyz="0 0 0"  rpy="1.570795 0 0" />
      <geometry>
        <cylinder radius="0.15" length="0.04318"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.005" iyz="0.0" izz="0.005"/>
    </inertial>

  </link>

  <!-- left Wheel joint -->
  <joint name="joint_left_wheel" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz="0 -0.325 -0.2"  rpy="0 0 0" /> 
    <axis xyz="0 1 0" />
  </joint>


  <!-- front castor link -->
  <link name="front_castor">

    <visual>    
      <geometry>
        <sphere radius="0.05" />
      </geometry>
      <material name="white" />
        <color rgba="1 1 1 1"/>
    </visual>

    <collision>
      <origin xyz="0 0 0"  rpy="1.570795 0 0" />
      <geometry>
        <sphere radius="0.05" length="0.15"/>
      </geometry>
    </collision>
    <inertial>
        <mass value="1" />
        <inertia ixx="0.1316" ixy="0.0" ixz="0" iyy="0.1316" iyz="0" izz="0.01125" />
    </inertial>

  </link>

  <joint name="front_castor_joint" type="continuous">
    <origin xyz="0.4 0.0 -0.3" rpy="1.57 0.0 0.0"/>
    <parent link="base_link"/>
    <child link="front_castor"/>
  </joint>


  <!-- rear castor link -->
  <link name="rear_castor">

    <visual>    
      <geometry>
        <sphere radius="0.05" />
      </geometry>
      <material name="white" />
        <color rgba="1 1 1 1"/>
    </visual>

    <collision>
      <origin xyz="0 0 0"  rpy="1.570795 0 0" />
      <geometry>
        <sphere radius="0.05" length="0.15"/>
      </geometry>
    </collision>
    <inertial>
        <mass value="1" />
        <inertia ixx="0.1316" ixy="0.0" ixz="0" iyy="0.1316" iyz="0" izz="0.01125" />
    </inertial>

  </link>

  <joint name="rear_castor_joint" type="continuous">
    <origin xyz="-0.4 0.0 -0.3" rpy="1.57 0.0 0.0"/>
    <parent link="base_link"/>
    <child link="rear_castor"/>
  </joint>

</robot>
